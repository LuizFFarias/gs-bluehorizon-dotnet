@model VoluntarioPessoa
@{
ViewData["Title"] = "Conta";
}

<link rel="stylesheet" href="css/bluehorizon.css"/>
<div class="pt-5">
    <div style="background-color: #363636;" class="text-center">
        <h2 class="pt-2 pb-2 text-white" >Sua Conta</h2>
    </div>
</div>

<h3 class="display-5 text-center">Abaixo, confira os dados da sua conta.</h3>

<img src="Imagens/Nuvem.jpg" style="width: 100%"/>

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">CPF</th>
        <th scope="col">Nome</th>
        <th scope="col">Data de Nascimento</th>
        <th scope="col">CEP</th>
        <th scope="col">Lixo Retirado</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th scope="row">@Html.DisplayFor(modelItem => modelItem.Id)</th>
        <td>@Html.DisplayFor(modelItem => modelItem.CepEndereco)</td>
        <td>@Html.DisplayFor(modelItem => modelItem.Nome)</td>
        <td>@Html.DisplayFor(modelItem => modelItem.DtnascPessoa)</td>
        <td>@Html.DisplayFor(modelItem => modelItem.CepEndereco)</td>
        <td>@Html.DisplayFor(modelItem => modelItem.Perfil.QntdLixo)</td>
    </tr>
    </tbody>
</table>


<div class="d-flex flex-column mx-auto align-items-center pt-5">
    <a asp-action="Editar" asp-route-id="@Model.Id" class="link m-1 rounded-pill text-decoration-none text-white text-center pt-1">Editar</a>
</div>

<div class="d-flex flex-column mx-auto align-items-center pt-5">
    <a asp-action="Cadastrar" asp-controller="VoluntarioPessoa" class="link m-1 rounded-pill text-decoration-none text-white text-center pt-1">Junte-se a n√≥s</a>
</div>
    