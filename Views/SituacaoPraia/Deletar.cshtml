@model SituacaoPraia
@{
ViewData["Title"] = "Deletar Praia";
}
<link rel="stylesheet" href="css/bluehorizon.css"/>
<div class="pt-5 align-items-center">
    <div style="background-color: #363636;" class="text-center">
        <h2 class="pt-2 pb-2 text-white" >Deletar praia</h2>
    </div>
</div>
<div class="pt-2 d-flex flex-column align-items-center">
    <img src="~/Imagens/Cadastro.jpg" class="pt-3" style="width: 120px; height: 120px"/>
</div>


<form asp-action="Deletar" method="post" class="pt-4 d-flex flex-column align-items-center">
    <div class="mb-3">
        <input type="text" placeholder="Nome da praia" asp-for="NomePraia" class="form-control rounded-pill" style="background-color: #bccad4; text-decoration-color: #5c6468; width: 40rem" readonly>
    </div>
    <div class="mb-3">
        <input type="number" placeholder="NÃ­vel de sujeira" class="form-control rounded-pill" style="background-color: #bccad4; text-decoration-color: #5c6468; width: 40rem"  asp-for="NivelSujeiraPraia" class="form-control" readonly>
    </div>
    <div class="mb-3">
        <input type="text" placeholder="Cidade" asp-for="CidadePraia" class="form-control rounded-pill" style="background-color: #bccad4; text-decoration-color: #5c6468; width: 40rem" readonly>
    </div>
    <input type="hidden" asp-for="Id"/>
    <button type="submit" value="Deletar" class="btn btn-warning rounded-pill" style="background-color: #1189e0; width: 23rem; height: 2.5rem; font-size: 20px;" >Deletar</button>
</form>